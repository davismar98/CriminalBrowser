<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_visita"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="davismar98.browser.criminal.app.com.criminalbrowser.visitaActivity"
    tools:showIn="@layout/activity_visita2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="5dp"
                android:background="@color/icons">

                <TextView
                    android:text="Datos de la cárcel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/txtcarcel"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:text="Nombre de la carcel "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/carcelNombre"
                    android:layout_alignBaseline="@+id/TextView123"
                    android:layout_alignBottom="@+id/TextView123"
                    android:layout_toEndOf="@+id/textView5"
                    android:layout_marginStart="15dp" />

                <TextView
                    android:text="correo de la carcel "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/carcelCorreo"
                    android:layout_alignBaseline="@+id/textView4"
                    android:layout_alignBottom="@+id/textView4"
                    android:layout_alignStart="@+id/carcelNombre" />

                <TextView
                    android:text="telefono de la carcel "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/carcelTel"
                    android:layout_alignBaseline="@+id/textView5"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_alignStart="@+id/carcelCorreo" />

                <TextView
                    android:text="Direccion de la carcel "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/carcelDir"
                    android:layout_alignBaseline="@+id/textView6"
                    android:layout_alignBottom="@+id/textView6"
                    android:layout_alignStart="@+id/carcelTel" />

                <TextView
                    android:text="Correo: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:id="@+id/textView4"
                    android:layout_below="@+id/TextView123"
                    android:layout_alignStart="@+id/TextView123"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Dirección:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:id="@+id/textView6"
                    android:layout_below="@+id/textView5"
                    android:layout_alignStart="@+id/textView5"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Nombre: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:id="@+id/TextView123"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/txtcarcel"
                    android:layout_alignParentStart="true"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Teléfono: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:id="@+id/textView5"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/textView4"
                    android:layout_alignParentStart="true"
                    android:textStyle="normal|bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/icons"
                android:paddingLeft="5dp">

                <TextView
                    android:text="Hora inicio: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView31"
                    android:layout_below="@+id/textView30"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="08:00 am "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:id="@+id/horaI"
                    android:layout_alignBaseline="@+id/textView31"
                    android:layout_alignBottom="@+id/textView31"
                    android:layout_toEndOf="@+id/textView31" />

                <TextView
                    android:text="Hora Fin: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView40"
                    android:layout_alignBaseline="@+id/horaI"
                    android:layout_alignBottom="@+id/horaI"
                    android:layout_toEndOf="@+id/horaI"
                    android:layout_marginStart="26dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="06:00pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:id="@+id/horaF"
                    android:layout_alignBaseline="@+id/textView40"
                    android:layout_alignBottom="@+id/textView40"
                    android:layout_toEndOf="@+id/textView40" />

                <TextView
                    android:text="Miércoles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:id="@+id/diaVisita"
                    android:layout_above="@+id/textView31"
                    android:layout_toEndOf="@+id/textView30" />

                <TextView
                    android:text="Día: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView30"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/textView29"
                    android:layout_alignParentStart="true"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Horario visitas "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView29"
                    android:textColor="@color/colorAccent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="15dp"
                android:background="@color/icons"
                android:paddingLeft="5dp">

                <TextView
                    android:text="Información del encarcelado "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView51"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:text="Número de registro: "
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView52"
                    android:layout_below="@+id/textView51"
                    android:layout_marginTop="11dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Visitas disponibles: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView54"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/textView53"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Nombre: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView53"
                    android:layout_below="@+id/textView52"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="11dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="126567"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/encReg"
                    android:layout_alignBaseline="@+id/textView52"
                    android:layout_alignBottom="@+id/textView52"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:text="nombre del encarcelado "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/encNombre"
                    android:layout_alignBaseline="@+id/textView53"
                    android:layout_alignBottom="@+id/textView53"
                    android:layout_toEndOf="@+id/textView53"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/encVisitas"
                    android:layout_alignBaseline="@+id/textView54"
                    android:layout_alignBottom="@+id/textView54"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/icons"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp">

                <TextView
                    android:text="Datos personales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/txtesdfsdfsdf"
                    android:textColor="@color/colorAccent" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:layout_below="@+id/txtesdfsdfsdf"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/userName"
                    android:textSize="14sp"
                    android:hint="Ingresa tu nombre " />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/userApellidos"
                    android:textSize="14sp"
                    android:layout_below="@+id/userName"
                    android:layout_alignStart="@+id/userName"
                    android:hint="Ingresa tus apellidos" />

                <TextView
                    android:text="Apellidos:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:layout_alignBaseline="@+id/userApellidos"
                    android:layout_alignBottom="@+id/userApellidos"
                    android:layout_alignStart="@+id/textView14"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="ID:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView24"
                    android:layout_alignBaseline="@+id/userID"
                    android:layout_alignBottom="@+id/userID"
                    android:layout_alignEnd="@+id/textView15"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Teléfono:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView27"
                    android:layout_alignBaseline="@+id/userPhone"
                    android:layout_alignBottom="@+id/userPhone"
                    android:layout_alignStart="@+id/textView15"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/userID"
                    android:hint="Número de identidad"
                    android:textSize="14sp"
                    android:layout_below="@+id/userApellidos"
                    android:layout_alignStart="@+id/userApellidos" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/userPhone"
                    android:textSize="14sp"
                    android:hint="Número de teléfono"
                    android:layout_below="@+id/userID"
                    android:layout_alignStart="@+id/userID" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/userEmail"
                    android:textSize="14sp"
                    android:hint="Correo electrónico"
                    android:layout_below="@+id/userPhone"
                    android:layout_alignStart="@+id/userPhone" />

                <TextView
                    android:text="Correo:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView28"
                    android:layout_alignBaseline="@+id/userEmail"
                    android:layout_alignBottom="@+id/userEmail"
                    android:layout_alignEnd="@+id/textView27"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Nombres: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:layout_alignBaseline="@+id/userName"
                    android:layout_alignBottom="@+id/userName"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/icons"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp">

                <TextView
                    android:text="Seleccionar fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView58"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:text="Sin seleccionar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dia"
                    android:textSize="18sp"
                    android:textStyle="normal|italic"
                    android:layout_alignBaseline="@+id/btnAddDia"
                    android:layout_alignBottom="@+id/btnAddDia"
                    android:layout_toEndOf="@+id/btnAddDia"
                    android:layout_marginStart="28dp" />

                <Button
                    android:text="Agregar Hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnAddHora"
                    android:layout_below="@+id/btnAddDia"
                    android:layout_alignParentStart="true"
                    android:layout_alignEnd="@+id/btnAddDia" />

                <Button
                    android:text="Agregar fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnAddDia"
                    android:layout_below="@+id/textView58"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:text="Sin seleccionar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/hora"
                    android:textSize="18sp"
                    android:textStyle="normal|italic"
                    android:layout_alignBaseline="@+id/btnAddHora"
                    android:layout_alignBottom="@+id/btnAddHora"
                    android:layout_alignStart="@+id/dia" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
