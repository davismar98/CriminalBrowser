<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <ImageView
        app:srcCompat="@drawable/placeholder"
        android:id="@+id/bandera"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pais"
        android:textColor="@color/colorAccent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/bandera" />

    <TextView
        android:text="juegos ilegales por dinero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delito"
        android:paddingLeft="15dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="15dp" />

    <TextView
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coincidencias"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/delito"
        android:layout_alignParentEnd="true"
        android:paddingRight="15dp" />

    <TextView
        android:text="Coincidencias: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:paddingLeft="15dp"
        android:layout_alignBaseline="@+id/coincidencias"
        android:layout_alignBottom="@+id/coincidencias"
        android:layout_toStartOf="@+id/coincidencias" />


</RelativeLayout>