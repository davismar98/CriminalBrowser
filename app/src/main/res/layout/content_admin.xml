<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="davismar98.browser.criminal.app.com.criminalbrowser.adminActivity"
    tools:showIn="@layout/activity_admin"
    android:background="@color/primary_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/admin"
        android:layout_weight="1.8"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:id="@+id/datos"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/flag"
                android:gravity="center_horizontal"
                android:paddingTop="3dp"
                android:layout_marginRight="5dp"
                android:elevation="0dp"
                android:background="@color/icons">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/global"
                    android:id="@+id/bandera" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/adminPais"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:layout_marginLeft="5dp"
                android:background="@color/icons">

                <TextView
                    android:text="Administrador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:textColor="@color/colorAccent"
                    android:textStyle="normal|italic"
                    android:textSize="14sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:text="Nombre Admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/adminN"
                    android:layout_below="@+id/textView16"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:text="username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/adminUser"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:layout_below="@+id/adminN"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:id="@+id/organismo"
                android:layout_marginTop="5dp"
                android:background="@color/icons"
                android:paddingBottom="30dp">

                <TextView
                    android:text="Organismo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView37"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="normal|italic"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:text="correo organismo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/organismoTel"
                    android:layout_alignStart="@+id/organismoN"
                    android:id="@+id/organismoDir" />

                <TextView
                    android:text="TelÃ©fono del organismo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/organismoTel"
                    android:layout_below="@+id/organismoCorreo"
                    android:layout_alignStart="@+id/organismoDir" />

                <TextView
                    android:text="DIRECCION ORGANISMO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/organismoCorreo"
                    android:layout_below="@+id/organismoN"
                    android:layout_alignStart="@+id/organismoN" />

                <TextView
                    android:text="Nombre del Organismo completo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/organismoN"
                    android:textStyle="normal|bold"
                    android:textSize="16sp"
                    android:layout_marginStart="17dp"
                    android:layout_below="@+id/textView37"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </ScrollView>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menu"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/menuEncarcelado"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_marginRight="5dp"
                android:background="@color/icons">

                <TextView
                    android:text="BUSCADOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView43"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/colorPrimaryDark" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver"
                    android:drawableTop="@drawable/wanted2"
                    android:id="@+id/btnVerB"
                    android:elevation="0dp" />

                <Button
                    android:text="Agregar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnAgregarB"
                    android:drawableTop="@drawable/add_b" />

                <Button
                    android:text="Denuncias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnDenuncia"
                    android:drawableTop="@drawable/report"
                    android:textSize="11sp" />

                <Button
                    android:text="Buscar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnBuscarB"
                    android:drawableTop="@drawable/search2" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/menuBuscado"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:background="@color/icons">

                <TextView
                    android:text="ENCARCELADOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView44"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/colorPrimaryDark" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver"
                    android:drawableTop="@drawable/prisioner2"
                    android:id="@+id/btnVerE" />

                <Button
                    android:text="Agregar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnAgregarE"
                    android:drawableTop="@drawable/add_e" />

                <Button
                    android:text="Visitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnVisita"
                    android:drawableTop="@drawable/visit" />

                <Button
                    android:text="Buscar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnBuscarE"
                    android:drawableTop="@drawable/search" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
