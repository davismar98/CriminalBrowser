<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_denuncia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="davismar98.browser.criminal.app.com.criminalbrowser.denunciaActivity"
    tools:showIn="@layout/activity_denuncia">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="15dp"
                android:paddingLeft="5dp"
                android:background="@color/icons">

                <TextView
                    android:text="Organismo encargado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/txtorganismo"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:text="Nombre del organifsdfdsfsdfsdfsfsdfdsfsdfsdfsmo si es"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/organismoNombre"
                    android:layout_alignBaseline="@+id/TextView123"
                    android:layout_alignBottom="@+id/TextView123"
                    android:layout_toEndOf="@+id/textView5"
                    android:layout_marginStart="15dp" />

                <TextView
                    android:text="telefono del organismo "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/organismoTel"
                    android:layout_alignBaseline="@+id/textView5"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_alignStart="@+id/organismoCorreo" />

                <TextView
                    android:text="Direccion del organismo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/organismoDir"
                    android:layout_alignBaseline="@+id/textView6"
                    android:layout_alignBottom="@+id/textView6"
                    android:layout_alignStart="@+id/organismoTel" />

                <TextView
                    android:text="Dirección:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:id="@+id/textView6"
                    android:layout_below="@+id/textView5"
                    android:layout_alignStart="@+id/textView5"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Nombre: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:id="@+id/TextView123"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/txtorganismo"
                    android:layout_alignParentStart="true"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Teléfono: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:id="@+id/textView5"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/textView4"
                    android:layout_alignParentStart="true"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="correo del organismo "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/organismoCorreo"
                    android:layout_above="@+id/textView5"
                    android:layout_alignStart="@+id/organismoNombre" />

                <TextView
                    android:text="Correo: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold"
                    android:layout_below="@+id/organismoNombre"
                    android:layout_alignEnd="@+id/textView5"
                    android:layout_marginTop="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="15dp"
                android:background="@color/icons"
                android:paddingLeft="5dp">

                <TextView
                    android:text="Información del buscado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView51"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:text="Alias:"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView52"
                    android:layout_below="@+id/textView51"
                    android:layout_marginTop="11dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Recompensa:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView54"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/textView53"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Nombre: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView53"
                    android:layout_below="@+id/textView52"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="11dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="nombre del buscado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/busNombre"
                    android:layout_alignBaseline="@+id/textView53"
                    android:layout_alignBottom="@+id/textView53"
                    android:layout_toEndOf="@+id/textView53"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:text="10000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/busRecomp"
                    android:layout_alignBaseline="@+id/textView54"
                    android:layout_alignBottom="@+id/textView54"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="alias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/busAlias"
                    android:layout_alignBaseline="@+id/textView52"
                    android:layout_alignBottom="@+id/textView52"
                    android:layout_alignStart="@+id/busNombre" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/icons"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp">

                <TextView
                    android:text="Datos personales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/txtesdfsdfsdf"
                    android:textColor="@color/colorAccent" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:layout_below="@+id/txtesdfsdfsdf"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/userName"
                    android:textSize="14sp"
                    android:hint="Ingresa tu nombre " />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/userApellidos"
                    android:textSize="14sp"
                    android:layout_below="@+id/userName"
                    android:layout_alignStart="@+id/userName"
                    android:hint="Ingresa tus apellidos" />

                <TextView
                    android:text="Apellidos:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:layout_alignBaseline="@+id/userApellidos"
                    android:layout_alignBottom="@+id/userApellidos"
                    android:layout_alignStart="@+id/textView14"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="ID:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView24"
                    android:layout_alignBaseline="@+id/userID"
                    android:layout_alignBottom="@+id/userID"
                    android:layout_alignEnd="@+id/textView15"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Teléfono:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView27"
                    android:layout_alignBaseline="@+id/userPhone"
                    android:layout_alignBottom="@+id/userPhone"
                    android:layout_alignStart="@+id/textView15"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/userID"
                    android:hint="Número de identidad"
                    android:textSize="14sp"
                    android:layout_below="@+id/userApellidos"
                    android:layout_alignStart="@+id/userApellidos" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/userPhone"
                    android:textSize="14sp"
                    android:hint="Número de teléfono"
                    android:layout_below="@+id/userID"
                    android:layout_alignStart="@+id/userID" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/userEmail"
                    android:textSize="14sp"
                    android:hint="Correo electrónico"
                    android:layout_below="@+id/userPhone"
                    android:layout_alignStart="@+id/userPhone" />

                <TextView
                    android:text="Correo:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView28"
                    android:layout_alignBaseline="@+id/userEmail"
                    android:layout_alignBottom="@+id/userEmail"
                    android:layout_alignEnd="@+id/textView27"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Nombres: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:layout_alignBaseline="@+id/userName"
                    android:layout_alignBottom="@+id/userName"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/icons"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp">

                <TextView
                    android:text="Denuncia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView58"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:text="Comentarios: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView58"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:id="@+id/textView2" />

                <EditText
                    android:layout_width="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/comentarios"
                    android:layout_below="@+id/textView58"
                    android:layout_toEndOf="@+id/textView2"
                    android:layout_marginStart="15dp"
                    android:layout_height="120dp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
